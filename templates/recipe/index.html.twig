{% extends 'base.html.twig' %}

{% block title %}Toutes les recettes{% endblock %}

{% block body %}
<p>
    Orci dignissim nulla aenean lacus mus neque, ornare ridiculus egestas.
    Ligula consectetur ut, mus non etiam auctor tempor, nullam dapibus.
</p>

<p>
    <a href="{{ path('recipe.create') }}" class="btn btn-primary btn-sm">Cr√©er une recette</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>{% for recipe in recipes %}
        <tr>
            <td><a href="{{ path('recipe.show', {id: recipe.id, slug: recipe.slug}) }}">{{ recipe.title }}</a></td>
            <td>
                <a href="{{ path('recipe.edit', {id: recipe.id}) }}" class="btn btn-primary btn-sm">Editer</a>
            </td>
        </tr>
    {% endfor %}</tbody>
</table>

{% endblock %}
